{
    "extends": [
        "config:base",
        "helpers:pinGitHubActionDigests"
    ],
    "baseBranches": [
        "main"
    ],
    "postUpdateOptions": [
        "gomodTidy"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [".bcr/presubmit.yml"],
            "matchStrings": [
                "bazel:\\s*\\[(?<currentValue>[0-9.x,\\s]+)\\]"
            ],
            "depNameTemplate": "Bazel",
            "datasourceTemplate": "bazel",
            "versioningTemplate": "regex:^\\d+\\.x$"
        }
    ],
    "packageRules": [
        {
            "updateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true
        },
        {
            "baseBranchList": [
                "main"
            ],
            "packageNames": [
                "github.com/golang/protobuf",
                "google.golang.org/protobuf"
            ],
            "groupName": "golang/protobuf"
        },
        {
            "packagePatterns": [
                "jekyll.*",
                "github-pages"
            ],
            "enabled": false
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchPackageNames": [
                "slsa-framework/slsa-github-generator"
            ],
            "pinDigests": false
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchPackageNames": [
                "bazel-contrib/publish-to-bcr"
            ],
            "automerge": true
        }
    ]
}
